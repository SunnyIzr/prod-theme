@font-face {
  font-family: 'Josefin Slab';
  font-style: normal;
  font-weight: 400;
  src: local('Josefin Slab'), local('JosefinSlab'), url(http://themes.googleusercontent.com/static/fonts/josefinslab/v3/46aYWdgz-1oFX11flmyEfaRDOzjiPcYnFooOUGCOsRk.woff) format('woff');
}

.lpnav {
  font-family: 'Josefin Slab';
  line-height: 37px;

}

.sticky-wrapper{


}

#navbar {
  display:none;
}

.is-sticky{
  display:block !important;
}

.lp-logo{
  position:absolute;
  top:0;
  left:8%;
}
.logo{

}
.tray-lp{
  top:50%
  left:50%;
  width:161px;
  position:absolute;
  opacity:.55;
}
.logolp {
  width:108px;
  height:145px;
  position: relative;
  right:auto;
  margin:28px;
}

#top-nav{
  font-family:'Michroma', sans-serif;
}

#top-nav a{
  font-size:20px;
}

#top-nav a:hover{
  color:#83e5bf !important;
}

#main {
  position:relative;
}
@media only screen and (max-device-width: 480px) {
  .lpnav {
    display:none;
  }

  #navbar {
    display:block !important;
    top:0px;
  }



}

.prod-detail{
  background-color: #ffffff;
  position:absolute;
  top:0px;
  width:100%;
  height:100%;
  z-index:4;
  opacity: 0.0;
  text-align:center;
  padding:25%;
}

.prod-detail:hover {
  opacity:0.8;

}

.prod-expand-detail{
  display:inline;
  top:auto;
  margin-top:20px;
  left:0px;
  background: #ebebeb;
  overflow:hidden;
  float:left;
  width:1000%;
  margin-left:-1000px;
  opacity: 1.0;
}

.drawer{
  box-shadow:none;
  -webkit-box-shadow:none;
}
