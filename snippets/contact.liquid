            <li class="field"><input class="subject input" type="text" placeholder="Subject" name="subject" id="subject"></li>
            <li class="field"><textarea class="input textarea" placeholder="Your Message" rows="4" name="message" id="message"></textarea></li>
            <li class="row">
            <div class="eight columns">
              <p>
                <i class="icon-lock"></i> We will never share your information with any 3rd party.
              </p>
            </div>
            <!-- submit button -->
            <div class="four columns large btn primary">
              <input value="submit" class="submit" id="submit" name="submit" type="submit">
            </div>
            </li>
          </ul>
        </form>
        <!-- end contact form -->
      </div>
      <!-- end form div -->
    </div>
    </section>
    <!-- end contact form row -->
  </div>
  </section>
  <!-- end contact container -->