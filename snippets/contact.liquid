  <!-- begin contact container -->
  <section id="contact">
  <div class="white">
    <!-- section heading -->
    <section class="row heading">
    <h1><span>GET IN</span>TOUCH</h1>
    <h5>Hey there! Nice to meet you. If you like what you see and would like to work with us,please fill the form below to get in touch. We aim to respond to all enquiries within three working days.</h5>
    </section>
    <!-- contact form row-->
    <section class="row bigpadding">
    <div class="eight columns centered">
      <!-- div shows on successful form submission -->
      <div id="success">
      </div>
      <!-- begin form div -->
      <div id="fields">
